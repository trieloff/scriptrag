{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/auto-format.sh",
            "type": "command"
          }
        ],
        "matcher": "Write|Edit|MultiEdit"
      }
    ],
    "SessionStart": [
      {
        "command": "cd $CLAUDE_PROJECT_DIR && make install",
        "type": "command"
      }
    ]
  }
}
